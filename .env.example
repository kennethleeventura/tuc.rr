# TUC.rr Reviews Retriever - Environment Configuration
# Copy this file to .env and fill in your actual values

# Server Configuration
NODE_ENV=production
PORT=3000
DOMAIN=https://theunhappycustomer.com

# Database Configuration (Render PostgreSQL)
DATABASE_URL=postgresql://username:password@hostname:port/database

# OpenAI Configuration  
OPENAI_API_KEY=sk-your-openai-api-key-here

# Stripe Configuration (2882 LLC Account)
STRIPE_SECRET_KEY=sk_live_your-stripe-secret-key
STRIPE_PUBLISHABLE_KEY=pk_live_your-stripe-publishable-key
STRIPE_WEBHOOK_SECRET=whsec_your-webhook-secret

# Stripe Price IDs (Create these in Stripe Dashboard)
STRIPE_PRICE_PROFESSIONAL=price_professional_monthly_id
STRIPE_PRICE_ENTERPRISE=price_enterprise_monthly_id

# JWT Configuration
JWT_SECRET=your-super-secure-256-bit-jwt-secret-key-here

# Email Configuration (Optional - for notifications)
EMAIL_SERVICE=sendgrid
EMAIL_API_KEY=your-sendgrid-api-key
FROM_EMAIL=noreply@theunhappycustomer.com
SUPPORT_EMAIL=support@theunhappycustomer.com

# Frontend URLs
FRONTEND_URL=https://theunhappycustomer.com
APP_URL=https://app.theunhappycustomer.com

# Rate Limiting Configuration
RATE_LIMIT_WINDOW=15
RATE_LIMIT_MAX=100
API_RATE_LIMIT_WINDOW=60
API_RATE_LIMIT_MAX=50

# Security Configuration
BCRYPT_ROUNDS=12
SESSION_TIMEOUT=7d

# Legal Compliance
COMPANY_NAME=2882 LLC
COMPANY_ADDRESS=Your Legal Address
PRIVACY_POLICY_VERSION=1.0
TERMS_OF_SERVICE_VERSION=1.0
GDPR_DELETION_DAYS=30

# Monitoring (Optional)
LOG_LEVEL=info
ENABLE_ANALYTICS=true

# Development Only (Remove in production)
DEBUG=false